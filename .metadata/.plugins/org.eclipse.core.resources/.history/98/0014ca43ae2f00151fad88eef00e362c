// 1

// REPRESENTS: a vehicle
interface IVehicle {
	// RETURNS: the maximum distance this vehicle can travel on one tank of fuel
	int distanceTravelOnOneTank();
}

abstract class Vehicle implements IVehicle {
	int size; // size of fuel tank in gallons
	int gasMileage; // gas consumption in miles per gallon

	Vehicle(int size, int gasMileage) {
		this.size = size;
		this.gasMileage = gasMileage;
	}
	
	// RETURNS: the maximum distance this vehicle can travel on one tank of fuel
	public int distanceTravelOnOneTank() {
		return this.size * this.gasMileage; 
	}
}

class Car extends Vehicle {
	boolean pullTrailer; // whether pull a trailer
	
	Car(int size, int gasMileage, boolean pullTrailer) {
		super(size, gasMileage);
		this.pullTrailer = pullTrailer;
	}	
}

class Truck extends Vehicle {
	int maxLoad; // in kg
	
	Truck(int size, int gasMileage, int maxLoad) {
		super(size, gasMileage);
		this.maxLoad = maxLoad;
	}
}

class Bus extends Vehicle {
	int capacity; // in person	
	
	Bus(int size, int gasMileage, int capacity) {
		super(size, gasMileage);
		this.capacity = capacity;
	}
}